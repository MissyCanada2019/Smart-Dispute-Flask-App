# Smart Dispute Canada - Environment Configuration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=smartdispute-canada-legal-platform-2024-secure-key
DATABASE_URL=postgresql://appuser:password@localhost:5432/mydb

# AI Service API Keys - REMOVED per user request

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=uploads

# OCR Configuration (Tesseract)
TESSERACT_CMD=/usr/bin/tesseract

# Logging
LOG_LEVEL=DEBUG

# Security Settings
SESSION_COOKIE_SECURE=False  # Disabled for development
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_ENABLED=True
# Cloudflare API Configuration
CLOUDFLARE_API_KEY=your-cloudflare-api-key-here
APP_DOMAINS=justice-bot.com,snartdisputecanada.me