# Smart Dispute Canada - Production Environment Configuration for Railway

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secure-production-key-here-change-this-before-deployment
DATABASE_URL=postgresql://smartdispute_user:smartdispute_password@smartdispute-db.railway.internal:5432/smartdispute_db

# AI Service API Keys (Get these from their respective platforms)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=/tmp/uploads

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_ENABLED=True

# Logging
LOG_LEVEL=INFO